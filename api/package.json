{
  "name": "@databank/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && swc --copy-files --delete-dir-on-start --out-dir dist src",
    "dev": "cross-env NODE_ENV=development concurrently \"swc --copy-files --out-dir dist -w src\" \"nodemon dist/main\"",
    "lint": "tsc && eslint --fix src",
    "start": "node ./dist/main.js",
    "test": "find ./src -name '*.spec.ts' -exec node --loader @swc-node/register/esm --test {} \\;"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.2",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.2.2",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/platform-express": "^10.2.2",
    "@nestjs/swagger": "^7.1.10",
    "@nestjs/throttler": "^4.2.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "mongoose": "^7.4.5",
    "nodemailer": "^6.9.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.2.2",
    "@swc-node/register": "^1.6.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.80",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/nodemailer": "^6.4.9",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}