{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "moduleResolution": "node16",
    "noEmit": true,
    "paths": {
      "@/*": ["*"]
    },
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types", "src/typings"]
  }
}
