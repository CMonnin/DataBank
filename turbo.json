{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "jsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**"]
    },
    "db:generate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build", "^db:generate"],
      "persistent": true
    },
    "format": {},
    "lint": {
      "dependsOn": ["^build", "^db:generate"]
    },
    "test": {}
  }
}
